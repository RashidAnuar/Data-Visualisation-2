{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "repeat": {
    "row": ["poverty_absolute", "poverty_hardcore", "poverty_relative"],
    "column": ["Unemployment rate"]
  },
  "spec": {
    "data": {"url": "poverty_unemployment_by_state_year.csv"},
    "mark": "point",
    "params": [
      {
        "name": "brush",
        "select": {
          "type": "interval",
          "resolve": "union",
          "on": "[pointerdown[event.shiftKey], window:pointerup] > window:pointermove!",
          "translate": "[pointerdown[event.shiftKey], window:pointerup] > window:pointermove!",
          "zoom": "wheel![event.shiftKey]"
        }
      }
    ],
    "encoding": {
      "x": {"field": {"repeat": "column"}, "type": "quantitative"},
      "y": {
        "field": {"repeat": "row"},
        "type": "quantitative",
        "axis": {"minExtent": 30}
      },
      "color": {
        "condition": {
          "param": "brush",
          "field": "Year",
          "type": "nominal"
        },
        "value": "grey"
      }
    }
  }
}