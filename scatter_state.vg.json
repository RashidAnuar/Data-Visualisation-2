{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Scatter Plot: Unemployment vs Absolute Poverty",
    "width":550,
    "height": 520,
    "data": { "url": "poverty_unemployment_by_state_year.csv" },
    
    "layer": [
    {"mark": "circle",
    "encoding": {
        "x": { "field": "poverty_hardcore", "type": "quantitative", "title": "Absolute Poverty (%)" },
        "y": { "field": "Unemployment rate", "type": "quantitative", "title": "Unemployment Rate (%)" },
        "color": { "field": "State", "type": "nominal", "title": "State" },
        "tooltip": [
            { "field": "State" },
            { "field": "Year", "title": "Year" },
            { "field": "poverty_hardcore", "title": "Absolute Poverty (%)" },
            { "field": "Unemployment rate", "title": "Unemployment Rate (%)" }
        ],
        "size": { "value": 250 }    }
},
{    "transform": [
        {
            "loess": "Unemployment rate",
            "on": "poverty_hardcore"
        }
    ],
    "mark": { "type": "line", "color": "red", "strokeWidth": 3 },
    "encoding": {
        "x": { "field": "poverty_hardcore", "type": "quantitative" },
        "y": { "field": "Unemployment rate", "type": "quantitative" }
    }
}

] 
}