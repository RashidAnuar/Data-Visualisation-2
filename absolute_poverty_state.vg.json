{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "title": {
    "text": {
      "expr": "('Malaysia: ' + (pMetric === 'poverty_absolute' ? 'Absolute Poverty' : (pMetric === 'poverty_relative' ? 'Relative Poverty' : 'Hardcore Poverty')) + ' by State (%) â€” 2022')"
    },
    "fontSize": 18
  },

  "width": 900,
  "height": 520,
  "projection": {"type": "equalEarth"},

  "data": {
    "url": "ne_10m_admin_1_states_provinces.topojson",
    "format": { "type": "topojson", "feature": "ne_10m_admin_1_states_provinces" }
  },

  "params": [
    {
      "name": "pMetric",
      "value": "poverty_absolute",
      "bind": {
        "input": "radio",
        "options": ["poverty_absolute", "poverty_relative", "poverty_hardcore"],
        "labels": ["Absolute poverty (%)", "Relative poverty (%)", "Hardcore poverty (%)"]
      }
    }
  ],

  "transform": [
    { "filter": "datum.properties && datum.properties.admin === 'Malaysia'" },

    {
      "lookup": "properties.name",
      "from": {
        "data": { "url": "poverty_unemployment_by_state_year.csv" },
        "key": "State",
        "fields": ["poverty_absolute", "poverty_relative", "poverty_hardcore", "Year"]
      }
    },

    { "filter": "datum.Year == 2022" },

    {
      "calculate": "pMetric === 'poverty_absolute' ? datum['poverty_absolute'] : (pMetric === 'poverty_relative' ? datum['poverty_relative'] : datum['poverty_hardcore'])",
      "as": "metric_value"
    }
  ],

  "mark": { "type": "geoshape", "stroke": "black", "strokeWidth": 1 },

  "encoding": {
    "color": {
      "field": "metric_value",
      "type": "quantitative",
      "scale": { "scheme": "oranges" },
      "legend": { "format": ".1f" }
    },
    "tooltip": [
      { "field": "properties.name", "type": "nominal", "title": "State" },
      { "field": "poverty_absolute",   "type": "quantitative", "title": "Absolute poverty (%)", "format": ".2f" },
      { "field": "poverty_relative",   "type": "quantitative", "title": "Relative poverty (%)", "format": ".2f" },
      { "field": "poverty_hardcore",   "type": "quantitative", "title": "Hardcore poverty (%)", "format": ".2f" },
      { "field": "Year",               "type": "ordinal",      "title": "Year" }
  ]
}
}
