{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "title": {
    "text": {
      "expr": "('Malaysia: ' + (Metric === 'poverty_absolute' ? 'Absolute Poverty' : (Metric === 'poverty_relative' ? 'Relative Poverty' : 'Hardcore Poverty')) + ' by State (%) â€” 2022')"
    },
    "fontSize": 18
  },

  "autosize": { "type": "fit", "contains": "padding" },
    "width": "container",
  "height": 520,
  "projection": {"type": "equalEarth"},

  "data": {
    "url": "ne_10m_admin_1_states_provinces.topojson",
    "format": { "type": "topojson", "feature": "ne_10m_admin_1_states_provinces" }
  },

  "params": [
    {
      "name": "Metric",
      "value": "poverty_absolute",
      "bind": {
        "input": "select",
        "options": ["poverty_absolute", "poverty_relative", "poverty_hardcore"],
        "labels": ["Absolute poverty (%)", "Relative poverty (%)", "Hardcore poverty (%)"]
      }
    }
  ],

  "transform": [
    { "filter": "datum.properties && datum.properties.admin === 'Malaysia'" },

    {
      "lookup": "properties.name",
      "from": {
        "data": { "url": "poverty_unemployment_by_state_year.csv" },
        "key": "State",
        "fields": ["poverty_absolute", "poverty_relative", "poverty_hardcore", "Year"]
      }
    },

    { "filter": "datum.Year == 2022" },

    {
      "calculate": "Metric === 'poverty_absolute' ? datum['poverty_absolute'] : (Metric === 'poverty_relative' ? datum['poverty_relative'] : datum['poverty_hardcore'])",
      "as": "Rate (%)"
    }
  ],

  "mark": { "type": "geoshape", "stroke": "black", "strokeWidth": 1 },

  "encoding": {
    "color": {
      "field": "Rate (%)",
      "type": "quantitative",
      "scale": { "scheme": "tealblues" },
      "legend": { "format": ".1f" }
    },
    "tooltip": [
      { "field": "properties.name", "type": "nominal", "title": "State" },
      { "field": "poverty_absolute",   "type": "quantitative", "title": "Absolute poverty (%)", "format": ".2f" },
      { "field": "poverty_relative",   "type": "quantitative", "title": "Relative poverty (%)", "format": ".2f" },
      { "field": "poverty_hardcore",   "type": "quantitative", "title": "Hardcore poverty (%)", "format": ".2f" },
      { "field": "Year",               "type": "ordinal",      "title": "Year" }
  ]
}
}
