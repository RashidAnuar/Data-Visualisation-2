{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": {"text": "Choropleth of Poverty Metrics by State (2022)", "fontSize": 18, "anchor": "middle"},
  "repeat": {"row": ["poverty_absolute", "poverty_hardcore", "poverty_relative"]},
  "resolve": {
    "scale": {
      "color": "independent"
    }
  },
  "config": {
    "view": {"fill": "#ffffff", "stroke": null, "opacity": 0.8},"legend": {"padding": 10, "titleFontSize": 12}
  },
  "spec": {
    "width": 500,
    "height": 300,
    "data": {
      "url": "ne_10m_admin_1_states_provinces.topojson",
    "format": { "type": "topojson", "feature": "ne_10m_admin_1_states_provinces" }
    },
    "transform": [
      {
      "lookup": "properties.name",
      "from": {
        "data": { "url": "poverty_unemployment_by_state_year.csv" },
        "key": "State",
        "fields": ["poverty_absolute", "poverty_relative", "poverty_hardcore", "Year"]
      }
    },
      { "filter": "datum.Year == 2022" }
    ],
    "projection": {"type": "equalEarth"},
    "mark": { "type": "geoshape", "stroke": "black", "strokeWidth": 1 },
    "encoding": {"color": {
      "field": {"repeat": "row"},
      "type": "quantitative",
      "scale": { "scheme": "oranges" },
      "legend": { "format": ".1f" }
    },"tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "State"},
      {"field": {"repeat": "row"}, "type": "quantitative","format": ".1f"}
    ]
    
    }
  }
  }
