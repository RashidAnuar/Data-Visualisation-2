{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text": "Unemployment Rate by State (Over Time)", "anchor": "start", "fontSize": 18},
  "width": 920,
  "height": 460,
  "data": { "url": "poverty_unemployment_by_state_year.csv" },

  "params": [
    {
      "name": "stateParam",
      "value": "All",
      "bind": {
        "input": "select",
        "options": [
          "All",
          "Johor","Kedah","Kelantan","Kuala Lumpur","Labuan","Melaka",
          "Negeri Sembilan","Pahang","Perak","Perlis","Pulau Pinang",
          "Putrajaya","Sabah","Sarawak","Selangor","Terengganu"
        ],
        "labels": [
          "All",
          "Johor","Kedah","Kelantan","Kuala Lumpur","Labuan","Melaka",
          "Negeri Sembilan","Pahang","Perak","Perlis","Pulau Pinang",
          "Putrajaya","Sabah","Sarawak","Selangor","Terengganu"
        ]
      }
    }
  ],

  "transform": [
    {
      "filter": "stateParam == 'All' ? true : datum.State == stateParam"
    }
  ],

  "layer": [
    {
      "mark": {"type": "line", "point": true},
      "encoding": {
        "x": {"field": "Year", "type": "quantitative", "title": "Year", "axis": {"format": "d"}},
        "y": {
          "field": "Unemployment rate",
          "type": "quantitative",
          "title": "Unemployment rate (%)",
          "axis": {"format": ".1f"}
        },
        "color": {
          "condition": {
            "test": "stateParam == 'All'",
            "field": "State",
            "type": "nominal",
            "legend": {"title": "State"}
          },
          "value": "#444"
        },
        "tooltip": [
          {"field": "State", "type": "nominal"},
          {"field": "Year", "type": "quantitative", "title": "Year", "format": "d"},
          {"field": "Unemployment rate", "type": "quantitative", "title": "Rate (%)", "format": ".2f"}
        ]
      }
    },

    {
      "transform": [
        { "aggregate": [{"op": "max", "field": "Unemployment rate", "as": "ymax"}] }
      ],
      "mark": {"type": "rule", "strokeDash": [6, 4], "size": 2, "color": "black"},
      "encoding": { "y": {"field": "ymax", "type": "quantitative"} }
    },

    {
      "transform": [
        { "window": [{"op": "rank", "as": "r"}], "sort": [{"field": "Unemployment rate", "order": "descending"}] },
        { "filter": "datum.r == 1" }
      ],
      "mark": {"type": "text", "align": "left", "dx": 6, "dy": -6, "fontWeight": "bold"},
      "encoding": {
        "x": {"field": "Year", "type": "quantitative"},
        "y": {"field": "Unemployment rate", "type": "quantitative"},
        "text": {
          "type": "nominal"
        },
        "color": {"value": "black"}
      }
    }
  ],

  "config": {
    "view": {"stroke": null},
    "background": "transparent",
    "axis": {"labelFontSize": 12, "titleFontSize": 13}
  }
}
