{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Malaysia: Absolute Poverty by State (%) â€” 2022",
    "fontSize": 18
  },
  "width": 900,
  "height": 520,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "ne_10m_admin_1_states_provinces.topojson",
    "format": {"type": "topojson","feature": "ne_10m_admin_1_states_provinces"}
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": { "url": "hh_poverty_state_2022_renamed.csv" },
        "key": "State",
        "fields": ["Absolute_Poverty_Percent", "Year"]
      }
    }
  ],
  "mark": {"type": "geoshape", "stroke": "black", "strokeWidth": 1},
  "encoding": {
    "color": {
      "field": "Absolute_Poverty_Percent",
      "type": "quantitative",
      "title": "Absolute Poverty (%)",
      "scale": { "scheme": "oranges" },
      "legend": { "format": ".1f" }
    },
    "tooltip": [
      { "field": "properties.name", "type": "nominal", "title": "State" },
      { "field": "Absolute_Poverty_Percent", "type": "quantitative", "title": "Poverty (%)", "format": ".2f" },
      { "field": "Year", "type": "ordinal", "title": "Year" }
    ]
  }
}